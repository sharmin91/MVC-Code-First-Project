@model IEnumerable<MVC_Project.Models.Candidate>
@{
    ViewBag.Title = "Index";

}

<div class="row">
    <div class="col-12">
        <h3>Candidates</h3>

        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th></th>
                    <th>Candidate Name</th>
                    <th>Date of birth</th>
                    <th>Applied For</th>
                    <th>Expected Salary</th>
                    <th>Agree to Work from home?</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr id="tr_@c.CandidateId" style="vertical-align:middle">
                        <td>
                            <img class="rounded-circle" src="~/Pictures/@c.Picture" style="width:40px" />
                        </td>
                        <td>@c.CandidateName</td>
                        <td>@c.BirthDate.ToString("yyyy-MM-dd")</td>
                        <td>@c.AppliedFor</td>
                        <td>@c.ExpectedSalary.ToString("0.00")</td>
                        <td>@(c.WorkFromHome ? "Yes": "No")</td>

                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div class="col-12 text-center">
        @Html.ActionLink("To PDF", "CandidatePDF", "Crystal", new { }, new { @class = "btn btn-primary btn-sm" })&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        @Html.ActionLink("To Excel", "CandidateExcel", "Crystal", new { }, new { @class = "btn btn-primary btn-sm" })
    </div>
</div>
